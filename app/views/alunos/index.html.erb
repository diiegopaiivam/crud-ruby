<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Alunos</h1>


  <table class="table-principal">
    <thead align="center">
      <tr>
        <th>Nome</th>
        <th>Endereco</th>
        <th>Telefone</th>
        <th>Whatsapp</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody align="center">
      <% @alunos.each do |aluno| %>
        <tr>
          <td><%= aluno.nome %></td>
          <td><%= aluno.endereco %></td>
          <td><%= aluno.telefone %></td>
          <td><%= aluno.whatsapp %></td>
          <td><%= aluno.email %></td>
          <td class="show"><%= link_to 'Show', aluno %></td>
          <td class="edit"><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
          <td class="destroy"><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <a class="novo-aluno" href="/alunos/new">Novo Aluno</a>
  
</div>
